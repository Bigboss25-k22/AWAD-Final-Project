generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String           @id @default(uuid())
  email              String           @unique
  password           String?
  name               String?
  provider           String           @default("local")
  refreshToken       String?
  googleAccessToken  String?
  googleRefreshToken String?
  googleTokenExpiry  DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  emailWorkflows     EmailWorkflow[]  // Add this line
}

model EmailWorkflow {
  id             String         @id @default(uuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  gmailMessageId String
  subject        String
  from           String
  date           DateTime
  snippet        String?        @db.Text
  
  status         WorkflowStatus @default(INBOX)
  priority       Int            @default(0) 
  deadline       DateTime?
  snoozedUntil   DateTime?
  
  aiSummary      String?        @db.Text
  urgencyScore   Float?       
  
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  @@unique([userId, gmailMessageId])
  @@index([userId, status])
  @@index([userId, snoozedUntil])
  @@index([userId, deadline])
  @@map("email_workflows")
}

enum WorkflowStatus {
  INBOX
  TODO
  IN_PROGRESS
  DONE
  SNOOZED
}